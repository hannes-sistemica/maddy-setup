# Primary domain for the email server
PRIMARY_DOMAIN=mail.example.com

# Domain for webmail access
WEBMAIL_DOMAIN=webmail.example.com

# Cloudflare API token (for DNS management)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# SMTP and IMAP ports
SMTP_PORT=587
IMAP_PORT=993

# Certbot email (for Let's Encrypt notifications)
CERTBOT_EMAIL=admin@example.com

# Timezone
TZ=UTC

# Optional: Portainer settings (if using Portainer)
PORTAINER_PORT=9000